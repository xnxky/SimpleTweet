<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/item_user_info"
             android:id="@+id/header"/>

    <TextView
        android:id="@+id/tvFollowee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/component_vertical_margin"
        android:text="New Text"/>

    <TextView
        android:id="@+id/tvFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvFollowee"
        android:layout_toEndOf="@id/tvFollowee"
        android:layout_toRightOf="@id/tvFollowee"
        android:text="New Text"/>

</RelativeLayout>